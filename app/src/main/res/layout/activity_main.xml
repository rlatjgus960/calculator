<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="60px"
        android:paddingBottom="60px"
        android:textSize="80px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="7"
            android:textSize="50px" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="8"
            android:textSize="50px" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="9"
            android:textSize="50px" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="/"
            android:textSize="50px" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="4"
            android:textSize="50px" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="5"
            android:textSize="50px" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="6"
            android:textSize="50px" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="*"
            android:textSize="50px" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="1"
            android:textSize="50px" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="2"
            android:textSize="50px" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="3"
            android:textSize="50px" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="25"
            android:text="-"
            android:textSize="50px" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="3"
            android:text="0"
            android:textSize="50px" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:text="+"
            android:textSize="50px" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCe"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="50px" />

        <Button
            android:id="@+id/btnEq"
            android:layout_width="0px"
            android:layout_height="250px"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:text="="
            android:textSize="50px" />

    </LinearLayout>

</LinearLayout>